<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <title>Hello, world!</title>
  </head>
  <body>

    <%- include('nav.html') %>

    
    <h6>tweet list</h6>
    <div class="mt-4">
      <ul class="list-group">
      <% for(let i = 0 ; i < tweetdata.length; i++){ %>
        <li class="list-group-item">
          <b><%= tweetdata[i].tweet %></b> <i><%= tweetdata[i].date %></i>
          <button class="delete" data-id="<%= tweetdata[i]._id %>">삭제</button>
          <button class="btn btn-link" onclick="location.href='#'">자세히</button>
        </li>
      <% } %>
      </ul>
    </div>
    


    <!-- 삭제버튼 추가 -->

    <script>
      $('button.delete').click(function(e){
        var id = e.target.dataset.id;
        var clicked = $(this);
        $.ajax({
          method :'DELETE',
          url :'/deleteTweet',
          data :{_id : id},
        }).done(function(결과){
          clicked.parent('li').fadeOut(250);
        }).fail(function(xhr, 응답코드, 에러메세지){
          console.log(xhr, 응답코드, 에러메세지);
        });

      })
    </script>
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>

  </body>
</html>

