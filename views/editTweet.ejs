<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <title>Hello, world!</title>
  </head>
  <body>
    <%- include('nav.html') %>


    <form action="/editTweet?_method=PUT" method="POST">
      <div class="container mt-4">
        <form action="/addTweet" method="post">
          <div class="input-group">
            <span class="input-group-text">테스트</span>
            <input type="hidden" name="id" value="<%= data._id %>">
            <textarea class="form-control" aria-label="With textarea" name="tweet" autofocus><%= data.tweet%></textarea>
            <button type="submit" class="btn btn-primary">수정하기</button>
          </div>
        </form>
      </div>
    </form>
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>

  </body>
</html>

